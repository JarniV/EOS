#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "sleep.h"

#include "xgpio_l.h"
#define BUTTON_CHANNEL	1

int main()
{
    init_platform();

    print("Project 6: Using Buttons\n\r");
    print("By Jarni Vanmal");

    u32 temp;

    for(;;)
    {
    	temp = XGpio_ReadReg(XPAR_GPIO_0_BASEADDR, ((BUTTON_CHANNEL - 1) * XGPIO_CHAN_OFFSET) + XGPIO_DATA_OFFSET);


    	sleep_A9(1);
    }

    cleanup_platform();
    return 0;
}
